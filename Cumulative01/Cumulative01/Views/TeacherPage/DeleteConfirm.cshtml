@model Cumulative01.Models.Teacher

@{
    ViewData["Title"] = "Delete Teacher";
}

<h1>Confirm Delete</h1>

<div class="alert alert-danger mb-4">
    <h3>Are you sure you want to delete this teacher?</h3>
    <p>This action cannot be undone.</p>
</div>

<div class="card mb-4">
    <div class="card-header">
        Teacher Details
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">ID</dt>
            <dd class="col-sm-9">@Model.TeacherId</dd>
            
            <dt class="col-sm-3">Name</dt>
            <dd class="col-sm-9">@Model.TeacherFirstName @Model.TeacherLastName</dd>
            
            <dt class="col-sm-3">Employee Number</dt>
            <dd class="col-sm-9">@Model.EmployeeID</dd>
            
            <dt class="col-sm-3">Hire Date</dt>
            <dd class="col-sm-9">@Model.HireDate.ToString("yyyy-MM-dd")</dd>
            
            <dt class="col-sm-3">Salary</dt>
            <dd class="col-sm-9">@Model.Salary?.ToString("C")</dd>
        </dl>
    </div>
</div>
    
<form asp-action="Delete" method="post">
    <input type="hidden" name="id" value="@Model.TeacherId" />
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-action="List" class="btn btn-secondary">Cancel</a>
</form>